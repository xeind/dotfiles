{
  "colorize_brackets": true,
  "helix_mode": true,
  "gutter": {
    "folds": false
  },
  "git_panel": {
    "scrollbar": {
      "show": "auto"
    }
  },
  "ui_font_weight": 450.0,
  "preview_tabs": {
    "enable_preview_from_file_finder": false
  },
  "git": {
    "blame": {
      "show_avatar": false
    },
    "branch_picker": {
      "show_author_name": true
    },
    "inline_blame": {
      "delay_ms": 600,
      "enabled": true,
      "padding": 4
    }
  },
  "project_panel": {
    "hide_root": false,
    "auto_fold_dirs": false,
    "auto_reveal_entries": true,
    "indent_size": 14.0,
    "folder_icons": false,
    "file_icons": true,
    "hide_gitignore": false
  },
  "file_finder": {
    "file_icons": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "restore_on_startup": "last_workspace",
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "title_bar": {
    "show_menus": true,
    "show_sign_in": false,
    "show_user_picture": true,
    "show_branch_icon": false
  },
  "relative_line_numbers": "enabled",
  "active_pane_modifiers": {
    "border_size": 2.0
  },
  "ui_font_features": {
    "calt": 0
  },
  "ui_font_family": "Inter",
  "icon_theme": {
    "mode": "system",
    "light": "Colored Zed Icons Theme Light",
    "dark": "Colored Zed Icons Theme Dark"
  },
  "terminal": {
    "option_as_meta": true,
    "dock": "bottom",
    "font_family": "BerkeleyMono Nerd Font",
    "font_features": {
      "calt": 0,
      "ss03": 1,
      "ss05": 1
    }
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "cursor_blink": false,
  "cursor_shape": "block",
  "buffer_font_size": 18,
  "buffer_font_family": "TX-02 Condensed",
  "buffer_font_features": { "ss01": true },
  //"base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 16,
  "theme": "Nightingale",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "agent_servers": {
    "OpenCode": {
      "type": "custom",
      "command": "opencode",
      "args": ["acp"]
    }
  }
}
